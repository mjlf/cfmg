<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.mjlf.cfmg.entity.ICON" table="icon" catalog="cfmg">
		<id name="id" type="long" column="id" length="10">
			<generator class="identity"/>
		</id>
		<property name="characterId" column="characterId"  not-null="true" type="long"/>
		<property name="pictureName" column="pictureName" length="100" not-null="true" type="string"/>
		<property name="type" column="type"  not-null="true" type="long"/>
	</class>
	
</hibernate-mapping>